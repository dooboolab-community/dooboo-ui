{
  "compilerOptions": {
    "jsx": "react-jsx",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "incremental": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/**/*/__tests__",
    "dist",
    "**/*.example.*",
    "main/**/*/stories/**/*"
  ],
  "include": [
    "main"
  ],
  "files": [
    "environment.d.ts",
    "styled.d.ts"
  ]
}