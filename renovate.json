{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "excludeDepPatterns": [
        "^@expo/",
        "~@expo/",
        "^expo",
        "~expo"
      ]
    },
    {
      "excludePackageNames": [
        "babel-loader",
        "react",
        "react-native",
        "react-native-reanimated",
        "webpack-dev-server"
      ]
    },
    {
      "packagePatterns": [
        "^@types/"
      ],
      "automerge": true,
      "automergeType": "pr-comment",
      "automergeComment": "types: auto merge",
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "lints",
      "matchPackagePatterns": [
        "^eslint",
        "^prettier"
      ],
      "labels": [
        "lint"
      ]
    }
  ]
}
